<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.behmerd.sunnycalendar.MainActivity"
    android:background="#333333">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="#333333"
        android:id="@+id/llNB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvNow"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivU"
            android:src="@drawable/up"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivDY"
            android:layout_toStartOf="@+id/ivDY"
            android:layout_marginRight="50dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivDY"
            android:src="@drawable/down"
            android:layout_gravity="center_vertical"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginRight="25dp" />

    </RelativeLayout>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/gvWD"
        android:layout_below="@+id/llNB"
        android:layout_centerHorizontal="true"
        android:numColumns="7"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:rotationY="180" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gvCalendar"
        android:layout_below="@+id/gvWD"
        android:layout_centerHorizontal="true"
        android:numColumns="7"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:rotationY="180"
        android:layout_above="@+id/rlTools" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_gravity="center"
        android:background="#333333"
        android:id="@+id/rlTools"
        android:layout_alignParentBottom="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/btnSettings"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
